@{
    ViewData["Title"] = "contact";
}
@section CustomCss{
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/contact.css" />
}


    <img class="faq-banner" src="~/img/group-16_2.png" alt="">

    <div class="faq-heading-container">
        <div class="faq-heading-inner-container">
            <h2 class="faq-heading">Contact us</h2>
            <div class="faq-heading-img"></div>
        </div>
    </div>

    <div class="messages">
        <div class="messages-container">
            <div class="messages-particular-container">
                <img class="message_img1" src="~/img/forma-1_2.png" alt="forma-1_2">
                <p class="msg_data1 p-0 m-0">1111 Lorem ipsum text 100,</p>
                <p class="msg_data1 p-0 m-0">Lorem ipsum AB</p>
                <!-- <div class="msg_data">1111 Lorem ipsum text 100, Lorem ipsum AB</div> -->
            </div>
            <div class="messages-particular-container for_margin">
                <img class="message_img1" src="~/img/phone-call.png" alt="phone-call.png">
                <p class="msg_data1 p-0 m-0">+49 (40) 123 56 7890</p>
                <p class="msg_data1 p-0 m-0">+49 (40) 987 56 0000</p>
            </div>
            <div class="messages-particular-container">
                <img class="message_img3" src="~/img/vector-smart-object.png" alt="smart">
                <p class="msg_data1">info@helperland.com</p>
            </div>
        </div>
    </div>

    <div class="hr_line_container">
        <div class="hr_line"></div>
    </div>

    <div class="get_in_touch_hd">
        <b>Get in touch with us</b>
    </div>


    <!-- form -->
    <div class="get_in_touch container">
        <form>
            <div class="row align-items-center justify-content-center g-2">
                <div class="form-item col-12 col-sm-6">
                    <input type="text" class="form-control" name="fname" id="fname" placeholder="First Name" />
                </div>
                <div class="form-item col-12 col-sm-6">
                    <input type="text" class="form-control" name="fname" id="fname" placeholder="Last Name" />
                </div>
                <div class="form-item col-12 col-sm-6">
                    <div class="input-group mx-0 row">
                        <input type="text" class="input-group-text col-2 px-0" id="countryCode" placeholder="+91" />
                        <input type="text" class="form-control col-10" placeholder="Mobile Number"
                            aria-label="Mobile Number" aria-describedby="basic-addon1" />
                    </div>
                </div>
                <div class="form-item col-12 col-sm-6">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Address" />
                </div>
                <div class="form-item col-12">
                    <select class="form-select" aria-label="Subect">
                        <option selected>Subject</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
                <div class="form-item col-12">
                    <textarea name="message" class="form-control" id="message" cols="30" rows="10"
                        placeholder="Message"></textarea>
                </div>
                <button class="submit rounded-pill border-0 outline-0">Submit</button>
            </div>
        </form>
    </div>

    <div class="map">
        <img src="~/img/pin.png" alt="locationMarker" />

        <img src="~/img/group-16.png" alt="mapImage" />
    </div>

    <!-- news letter  -->
    <div class="center">
        <div class="get-news-container">
            <p>
                GET OUR NEWSLETTER
            </p>
            <form action="#" method="post" class="form-container">
                <input class="form-container-input" type="email" placeholder="YOUR EMAIL">
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

@section Scripts{
    <script src="~/js/contact.js"></script>
}