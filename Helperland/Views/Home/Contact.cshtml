@model Helperland.Models.ViewModels.ContactusViewModel


@{
    ViewData["Title"] = "contact";
}
@section CustomCss{

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/contact.css" />
}


<img class="faq-banner" src="~/img/group-16_2.png" alt="">

<div class="faq-heading-container">
    <div class="faq-heading-inner-container">
        <h2 class="faq-heading">Contact us</h2>
        <div class="faq-heading-img"></div>
    </div>
</div>

<div class="messages">
    <div class="messages-container">
        <div class="messages-particular-container">
            <img class="message_img1" src="~/img/forma-1_2.png" alt="forma-1_2">
            <p class="msg_data1 p-0 m-0">1111 Lorem ipsum text 100,</p>
            <p class="msg_data1 p-0 m-0">Lorem ipsum AB</p>
            <!-- <div class="msg_data">1111 Lorem ipsum text 100, Lorem ipsum AB</div> -->
        </div>
        <div class="messages-particular-container for_margin">
            <img class="message_img1" src="~/img/phone-call.png" alt="phone-call.png">
            <p class="msg_data1 p-0 m-0">+49 (40) 123 56 7890</p>
            <p class="msg_data1 p-0 m-0">+49 (40) 987 56 0000</p>
        </div>
        <div class="messages-particular-container">
            <img class="message_img3" src="~/img/vector-smart-object.png" alt="smart">
            <p class="msg_data1">info@helperland.com</p>
        </div>
    </div>
</div>

<div class="hr_line_container">
    <div class="hr_line"></div>
</div>

<div class="get_in_touch_hd">
    <b>Get in touch with us</b>
</div>


<!-- form -->
<div class="get_in_touch container">
    <form asp-action="Contact" asp-method="post" enctype="multipart/form-data">
        <div class="row align-items-center justify-content-center g-2">
            <div class="form-item col-12 col-sm-6">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-item col-12 col-sm-6">
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-item col-12 col-sm-6">
                <div class="input-group mx-0 row">
                    <input type="text" class="input-group-text col-2 px-0" placeholder="+91" />
                    <input asp-for="PhoneNumber" type="tel" class="form-control col-10" placeholder="Mobile Number"
                           aria-label="Mobile Number" aria-describedby="basic-addon1" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-item col-12 col-sm-6">
                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-item col-12">
                <select asp-for="Subject" class="form-select" aria-label="Subect">
                    <option value="General" selected>General</option>
                    <option value="Inquiry">Inquiry</option>
                    <option value="Renewal">Renewal</option>
                    <option value="Revocation">Revocation</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-item col-12">
                <textarea asp-for="Message" class="form-control" cols="30" rows="10"
                          placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-item col-12">
                <input asp-for="FileUpload" class="form-control">
                <span asp-validation-for="FileUpload" class="text-danger"></span>
            </div>

            <button type="submit" class="submit rounded-pill border-0 outline-0">Submit</button>
        </div>
    </form>
</div>

<div>
    <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2525.274682704889!2d7.130334415796003!3d50.733394079515335!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bee13f0afebfb1%3A0x7caeb94f4c1042fc!2sK%C3%B6nigswinterer%20Str.%20116%2C%2053227%20Bonn%2C%20Germany!5e0!3m2!1sen!2sin!4v1643877347851!5m2!1sen!2sin"></iframe>
</div>

<!-- news letter  -->
<div class="center">
    <div class="get-news-container">
        <p>
            GET OUR NEWSLETTER
        </p>
        <form action="#" method="post" class="form-container">
            <input class="form-container-input" type="email" placeholder="YOUR EMAIL">
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

@section Scripts{
<script src="~/js/contact.js"></script>
}