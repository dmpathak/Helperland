@model Helperland.Models.ViewModels.ResetPassword


@{
    ViewData["Title"] = "resetpassword";
}

@section CustomCss
{
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/resetpassword.css" />
}

@*body *@
<div class="faq-heading-container">
    <div class="faq-heading-inner-container">
        <h2 class="faq-heading">Reset Password</h2>
        <div class="faq-heading-img"></div>
    </div>
</div>


<div class="get_in_touch container">
    <form asp-action="Resetpassword" asp-method="post">
        <div class="row align-items-center justify-content-center g-2">
            <div class="form-item col-12 ">
                <label asp-for="NewPassword" class="mb-2"><b>New Password</b></label> 
                <input asp-for="NewPassword" type="password"  class="form-control" placeholder="Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-item col-12 ">
                <label asp-for="ConfirmPassword" class="mb-2"><b>Confirm Password</b></label> 
                <input asp-for="ConfirmPassword" type="password"  class="form-control" placeholder="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="submit rounded-pill border-0 outline-0">Save</button>
            </div>
        </div>
    </form>
</div>



@section jquery {
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script src="~/js/resetpassword.js"></script>
}
