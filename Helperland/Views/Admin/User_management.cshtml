@model Helperland.Models.ViewModels.AdminViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin > User management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
    
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/Admin_usermanagement.css">
</head>

<body>
    <!-- navbar  -->
    <div class="main_navbar">
        <p class="nav-heading" style="cursor: pointer;"><a asp-action="Service_requests" asp-controller="Admin">helperland</a></p>
        <div class="second_nav">
            <img src="~/img/admin-user.png" alt="">
            <p>@User.Identity.Name<</p>
            <a asp-action="Logout" asp-controller="Home"><img src="~/img/logout.png" alt=""></a>
        </div>
    </div>

    <!-- main content  -->
    <div class="main_content">
        <div class="main_contant_1" id="main_contant_1">
            <ul>
                <li><a href="#">Service Management</a></li>
                <li><a href="#">Role Management</a></li>
                <li>
                    <button class="drop_btn" data-bs-toggle="collapse" href="#collapseExample0" role="button"
                            aria-expanded="false" aria-controls="collapseExample">
                        <a href="#">Coupon Code Management</a>
                        <img class="main_container_1_arrow" src="~/img/admin-arrow.png" alt="">
                    </button>
                    <div class="collapse" id="collapseExample0">
                        <div class="collaps_inner_div">
                            <p><a href="#">Coupon Codes</a></p>
                            <p><a href="#">Usage History</a></p>
                        </div>
                    </div>
                </li>
                <li><a href="#">Escalation Management</a></li>
                <li><a asp-action="Service_requests" asp-controller="Admin">Service Requests</a></li>
                <li><a href="#">Service Providers</a></li>
                <li style="color: #1FB6FF !important;">User Management</li>
                <li>
                    <button class="drop_btn" data-bs-toggle="collapse" href="#collapseExample1" role="button"
                            aria-expanded="false" aria-controls="collapseExample">
                        <a href="#">Finance Module</a>
                        <img class="main_container_1_arrow" src="~/img/admin-arrow.png" alt="">
                    </button>
                    <div class="collapse" id="collapseExample1">
                        <div class="collaps_inner_div">
                            <p><a href="#">All Transactions</a></p>
                            <p><a href="#">Generate Payment</a></p>
                            <p><a href="#">Customer Invoices</a></p>
                        </div>
                    </div>
                </li>
                <li><a href="#">Zip Code Management</a></li>
                <li><a href="#">Rating Management</a></li>
                <li><a href="#">Inquiry Management</a></li>
                <li><a href="#">Newsletter Management</a></li>
                <li>
                    <button class="drop_btn" data-bs-toggle="collapse" href="#collapseExample2" role="button"
                            aria-expanded="false" aria-controls="collapseExample">
                        <a href="#">Content Management</a>
                        <img class="main_container_1_arrow" src="~/img/admin-arrow.png" alt="">
                    </button>
                    <div class="collapse" id="collapseExample2">
                        <div class="collaps_inner_div">
                            <p><a href="#">Blog</a></p>
                            <p><a href="#">FAQs</a></p>
                        </div>
                    </div>
                </li>
            </ul>
            <div class="pg_10_left_toggler" id="pg_10_left_toggler">
                <!-- <img src="~/img/ham.png" alt="ham"> -->
            </div>
        </div>
        <div class="main_contant_2">
            <div class="user_management_div">
                <div class="for_usermanagement">User Management</div>
                <div class="add_mybtn">
                    <img src="~/img/add.png" alt="~/img">
                    <p style="margin-left: 7px;">Add New User</p>
                </div>
            </div>

            <div class="form_div">
                <form>
                    <div class="row align-items-center justify-content-space-between he">
                        <div class="col-auto form-item ">
                            <select class="form-select for_height" aria-label="Subect" id="user_name" value="">
                                <option value="">User Name</option>

                                @foreach (var u_name in ViewBag.user_Names)
                                {
                                    <option value="@u_name">@u_name</option>

                                }
                            </select>
                        </div>
                        <div class="col-auto form-item">
                            <select class="form-select for_height" aria-label="Subect" id="user_role" value="">
                                <option selected>User Role</option>
                                <option value="Customer">Customer</option>
                                <option value="Service Provider">Service Provider</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <div class="col-auto form-item">
                            <div class="input-group mx-0 row for_height">
                                <input style="padding-left:0px !important;" type="text"
                                       class="input-group-text col-3 px-0" id="countryCode" placeholder="+49" />
                                <input type="text" class="form-control" placeholder="Mobile Number"
                                       aria-label="Mobile Number" aria-describedby="basic-addon1" id="mobile"/>
                            </div>
                        </div>
                        <div class="col-auto date_img">
                            <!-- <img src="~/img/admin-calendar-blue.png" alt=""> -->
                            <input type="text" class="form-control for_height" name="from" id="from_dt" placeholder="from date" readonly/>
                            <!-- <div>From Date</div> -->
                        </div>
                        <div class="col-auto date_img">
                            <!-- <img src="~/img/admin-calendar-blue.png" alt=""> -->
                            <input type="text" class="form-control for_height" name="to" id="to_dt" placeholder="To date" readonly/>
                            <!-- <div>To Date</div> -->
                        </div>
                        <div class="col-auto form-item">
                            <input type="text" class="form-control for_height" name="fname" id="zip"
                                   placeholder="Zipcode" />
                        </div>

                        <div class="col-auto form-item">

                            <button class="form_btn submit border-0 outline-0" type="button" id="search_data">Search</button>
                        </div>
                        <div class=" col-auto form-item">

                            <button class="form_btn1 submit  outline-0" type="reset" id="clear_data">Clear</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="between_table_header_container">
                <table id="example" style="width:100%">
                    <thead style="height: 56px;">
                        <tr>
                            <td class="between_table_header ">User Name </td>
                            <!-- <td class="between_table_header sorting sorting_asc" tabindex="0" aria-controls="example"
                                rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="User Name : activate to sort column descending">User
                                Name </td> -->
                            <td class="between_table_header ">Date of Registration</td>
                            <td class="between_table_header ">User Type</td>
                            <td class="between_table_header ">Phone</td>
                            <td class="between_table_header ">Postal Code </td>
                            <td class="between_table_header ">User Status</td>
                            <td class="between_table_header ">Actions</td>

                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var dta in ViewBag.Send)
                        {
                            <tr>
                                <td class="between_table_data">@dta.username</td>
                                <td class="between_table_data">
                                    <div class="hover_for_modalopen" data-bs-toggle="modal" data-bs-target="#servicedetail_serviceid">
                                        <div class="service_date_data d-flex">
                                            <div class="me-2"><img src="~/img/calendar2.png" alt="cal"></div>
                                            <div>@dta.date</div>
                                        </div>
                                    </div>
                                </td>
                                @if (@dta.usertype == 1)
                                {
                                    <td class="between_table_data">Customer</td>
                                }
                                @if (@dta.usertype == 2)
                                {
                                    <td class="between_table_data">Service Provider</td>
                                }
                                @if (@dta.usertype == 3)
                                {
                                    <td class="between_table_data">Admin</td>
                                }
                                <td class="between_table_data">@dta.phone</td>
                                <td class="between_table_data">@dta.postal</td>
                                @if (@dta.userstatus == true)
                                {

                                    <td class="between_table_data"><button class="active_btn">Active</button></td>
                                    <td class="between_table_data">
                                        <div class="action_div" data-bs-toggle="popover" data-bs-placement="bottom"
                                     data-bs-html="true"
                                     data-bs-content="<p> <a class='Deactivate' id='@dta.userid'>Deactivate</a> </p>">
                                            <img src="~/img/group-38.png" alt="">
                                        </div>
                                    </td>
                                }
                                @if (@dta.userstatus == false)
                                {

                                    <td class="between_table_data"><button class="inactive_btn">Inctive</button></td>
                                    <td class="between_table_data">
                                        <div class="action_div" data-bs-toggle="popover" data-bs-placement="bottom"
                                     data-bs-html="true"
                                     data-bs-content="<p> <a class='activate' id='@dta.userid'>Activate</a> </p>">
                                            <img src="~/img/group-38.png" alt="">
                                        </div>
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <p class="reserve">©2018 Helperland. All rights reserved.</p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
	integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
</body>

<script src="~/js/Admin_usermanagement.js"></script>

</html>