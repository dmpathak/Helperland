<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helperland</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @RenderSection("CustomCss",required:false)
</head>
<body onload="progress_validator(4);">
    @if (ViewData["Title"] != null && (ViewData["Title"].ToString() != "Home Page" && ViewData["Title"].ToString() != "Beacome_a_pro"))
    {
        <div class="Faq_header">
            <a asp-controller="Home" asp-action="Index"><img src="~/img/logo-small.png" alt="logo" class="faq-nav-logo"></a>
            <div class="nav-btn-container">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (ViewBag.usertypeid == 1)
                    {
                        <a asp-controller="Book" asp-action="BookService" class="nav-round-btn-book nav_btn_hover1">Book Now</a>
                    }

                }
                else
                {
                    <a asp-controller="Home" asp-action="index" asp-route-login="true" class="nav-round-btn-book nav_btn_hover1">Book Now</a>
                }
                <a asp-controller="Home" asp-action="Prices" class="nav-round-btn-price nav_btn_hover2">Prices & services</a>
                <a href="#" class="nav-btn nav_btn_hover2">Warranty</a>
                <a href="#" class="nav-btn nav_btn_hover2">Blog</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-btn nav-round-btn-contact nav_btn_hover2">Contact</a>
                @*for logout *@
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="notifications">
                        <a href="#">
                            <img src="~/img/icon-notification.png" alt="notification">
                            <div class="notification_number">2</div>
                        </a>
                    </div>
                    
                    <!-- popover user icon  -->
                    @if (ViewBag.usertypeid == 1)
                    {
                        <div class="dropdown_imgs" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom"
                 data-bs-html="true"
                 data-bs-content="<p><span> welcome,</span> <br> <span><b>@User.Identity.Name</b></span></p> <hr> <p><a href='/Customer/CustomerDashboard'>My Dashboard</a></p> <p><a href='/Customer/CustomerMySettings'>My Settings</a></p> <p><a href='/Home/Logout'>Logout</a></p>" data-bs-custom-class="logout_popover">
                            <img style="width:36px; height:36px;" src="~/img/admin-user.png" alt="flag">
                            <img style="width:11px; height:6px; margin-top:10px; margin-left:7px;" src="~/img/arrow_down.png"
                     alt="flag">
                        </div>
                    }
                    else
                    {
                        <div class="dropdown_imgs" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom"
                 data-bs-html="true"
                 data-bs-content="<p><span> welcome,</span> <br> <span><b>@User.Identity.Name</b></span></p> <hr> <p><a href='/Provider/NewServiceRequest'>My Dashboard</a></p> <p><a href='/Provider/MySettings'>My Settings</a></p> <p><a href='/Home/Logout'>Logout</a></p>" data-bs-custom-class="logout_popover">
                            <img style="width:36px; height:36px;" src="~/img/admin-user.png" alt="flag">
                            <img style="width:11px; height:6px; margin-top:10px; margin-left:7px;" src="~/img/arrow_down.png"
                     alt="flag">
                        </div>
                    }
                }
                else
                {
                    <a asp-controller="Home" asp-action="index" asp-route-login="true" class="nav-round-btn-login nav_btn_hover1">Login</a>
                    <a asp-controller="Home" asp-action="Beacome_a_pro" class="nav-round-btn-helper nav_btn_hover1">Become a Helper</a>
                }
            </div>
            <div class="nav-expand-btn-container">
                <img class="hamburger" id="expand_btn" src="~/img/expand-btn.svg" alt="hamburger_img">
            </div>
        </div>
        <div class="expand-btn-container" id="expand_btn_container">
            <div class="expand-btn-inner-container">
                @if (User.Identity.IsAuthenticated)
                {

                    @if (ViewBag.usertypeid == 1)
                    {
                        <div class="expand-btn"><a asp-controller="Book" asp-action="BookService">Book now</a></div>
                    }

                }
                else
                {
                    <div class="expand-btn"><a asp-controller="Home" asp-action="index" asp-route-login="true">Book now</a></div>
                }
                <div class="expand-btn"><a asp-controller="Home" asp-action="Prices">Prices & services</a></div>
                <div class="expand-btn"><a href="#">Warranty</a></div>
                <div class="expand-btn"><a href="#">Blog</a></div>
                <div class="expand-btn"><a class="nav-btn" asp-controller="Home" asp-action="Contact">Contact</a></div>
                @*for logout *@
                @if (User.Identity.IsAuthenticated)
                {   
                    
                    @if (ViewBag.usertypeid == 1)
                    {
                        <div class="expand-btn"><a href="/Customer/CustomerDashboard">My Dashboard</a></div>
                        <div class="expand-btn"><a href="/Customer/CustomerMySettings">My Settings</a></div>
                        <div class="expand-btn"><a asp-controller="Home" asp-action="Logout">Logout</a></div>
                    }
                    else 
                    {
                        <div class="expand-btn"><a href="/Provider/NewServiceRequest">My Dashboard</a></div>
                        <div class="expand-btn"><a href="/Provider/MySettings">My Settings</a></div>
                        <div class="expand-btn"><a asp-controller="Home" asp-action="Logout">Logout</a></div>
                    }
                }
                else
                {
                    <div class="expand-btn"><a asp-controller="Home" asp-action="index" asp-route-login="true">Login</a></div>
                    <div class="expand-btn"><a asp-controller="Home" asp-action="Beacome_a_pro">Become a Helper</a></div>
                }
            </div>
        </div>
    }

    @RenderBody()

    <!-- footer  -->
    <div class="footer">
        <img class="footer_logo" src="~/img/logo.png" alt="logo">
        <div>
            <ul class="footer_data">
                <li class="footer_link"><a class="footer-btn" asp-controller="Home" asp-action="index">HOME</a></li>
                <li class="footer_link"><a class="footer-btn" asp-controller="Home" asp-action="About">ABOUT</a></li>
                <li class="footer_link"><a class="footer-btn" href="#">TESTIMONIALS</a></li>
                <li class="footer_link"><a class="footer-btn" asp-controller="Home" asp-action="Faq">FAQS</a></li>
                <li class="footer_link"><a class="footer-btn" href="#">INSURANCE</a></li>
                <li class="footer_link"><a class="footer-btn" href="#">POLICY</a></li>
                <li class="footer_link"><a class="footer-btn" href="#">IMPRESSUM</a></li>
            </ul>
        </div>
        <div>
            <img class="footer_icon1" src="~/img/ic-facebook.png" alt="fb">
            <img class="footer_icon2" src="~/img/insta.png" alt="insta">
        </div>
        <div class="footer_line">
        </div>
    </div>
    @if (ViewData["Title"] != null && ViewData["Title"] != "Home Page")
    {
        <div class="last_div">
            <div class="last_div_data">
                ©2018 Helperland. All rights reserved. <a href="#">Terms and Conditions</a> <div style="margin: 5.5px;">|</div> <a href="#">Privacy Policy</a>
            </div>
        </div>
    }

    else
    {
        <div class="last_div">
            <div class="last_div_data">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut feugiat nunc libero, ac malesuada ligula aliquam
                ac.
                <a style="color: #6EABEF; text-decoration:none;" href="#">Privacy Policy</a>
            </div>
            <button class="last_div_button rounded-pill">OK!</button>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @RenderSection("jquery", required: false)
    @RenderSection("Scripts", required: false)


    <script>
               var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
                var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
        })
    </script>

</body>
</html>
